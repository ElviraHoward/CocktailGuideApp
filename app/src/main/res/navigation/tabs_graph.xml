<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cocktailsFragment">

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="com.elvirafatkhutdinova.cocktailguideapp.ui.fragments.CocktailsFragment"
        android:label="@string/cocktails_tab"
        tools:layout="@layout/fragment_cocktails" >
        <action
            android:id="@+id/action_mainFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/action_cocktailsFragment_to_cocktailDetailFragment"
            app:destination="@id/cocktailDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.elvirafatkhutdinova.cocktailguideapp.ui.fragments.CategoriesFragment"
        android:label="@string/categories_tab"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoriesFragment_to_cocktailsByCategoryFragment"
            app:destination="@id/cocktailsByCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.elvirafatkhutdinova.cocktailguideapp.ui.fragments.FavoritesFragment"
        android:label="@string/favorites_tab"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_mainFragment"
            app:destination="@id/cocktailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cocktailDetailFragment"
        android:name="com.elvirafatkhutdinova.cocktailguideapp.ui.fragments.CocktailDetailFragment"
        android:label="fragment_cocktail_detail"
        tools:layout="@layout/fragment_cocktail_detail" />
    <fragment
        android:id="@+id/cocktailsByCategoryFragment"
        android:name="com.elvirafatkhutdinova.cocktailguideapp.ui.fragments.CocktailsByCategoryFragment"
        android:label="fragment_cocktails_by_category"
        tools:layout="@layout/fragment_cocktails_by_category" >
        <action
            android:id="@+id/action_cocktailsByCategoryFragment_to_cocktailDetailFragment"
            app:destination="@id/cocktailDetailFragment" />
    </fragment>
</navigation>